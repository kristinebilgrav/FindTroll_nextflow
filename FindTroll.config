/*
config (simple text file)
parameters and definitions
to be specific on command line during launch
*/

params {

    //folder
    folder = "my/folder"

    //bam
    bam=""

    //the output directory
    working_dir=""{working_dir}"

    //internal
    FindTroll_home="{path}"

    //singualarity container
    FindTroll_containre="path_to_container"

    // reference file (fasta)
    ref_fasta= "path_to_file"

    //retroseq
    //tab separated file with ME positions
    ref_ME_tab=path_to_file

    //SVDB
    //ALU database vcf
    //alu_vcf=path
    //l1_vcf=path
    //sva_vcf=path
    //herv_path=path


    //VEP
    // path to VEP
    VEP_path={VEP_path}
    //custom VEP
    vep_args="--custom exon_file,EXONS,bed,overlap,0 --cache --force_overwrite --offline --vcf --assembly GRCh37 --per_gene --format vcf"


}
